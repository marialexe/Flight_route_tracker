<h3>Add new route to airline</h3>

<form action="/airlines/<%=@airline.id%>/routes" method="POST">
  <label for="Route">Flight Route</label>
  <input id="Route" name="route" type="text" placeholder="Flight Route">

  <label for="Origin">Origin</label>
  <input id="Origin" name="origin" type="text" placeholder="Origin">

  <label for="Destination">Destination</label>
  <input id="Destination" name="destination" type="text" placeholder="Destination">

  <label for="Price">Price</label>
  <input id="Price" name="price" type="text" placeholder="Price">

  <label for="Currency">Currency</label>
  <input id="Currency" name="currency" type="text" placeholder="Currency">

  <label for="Airline">Airline:</label>
  <input id="Airline" name="airline_name" type="text" value="<%=@airline.airline_name%>">

  <label>
    Select Deal:
    <select name="label">
      <% for deal in @deals %>
      <option value="<%= deal.label %>"><%= deal.label %></option>
      <% end %>
    </select>
  </label>

  <input type="submit" value="Submit">
</form>