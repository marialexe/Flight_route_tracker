<h1 class="title">Airlines</h1>

<table>
  <tr>
    <th>Id</th>
    <th></th>
    <th>Name</th>
    <th></th>
    <th>Logo</th>
  </tr>
  <%for airline in @airlines%>
    <tr>
      <td><a href="/airlines/<%=airline.id%>"><%=airline.id%></a></td>
      <td></td>
      <td><%=airline.airline_name()%></td>
      <td></td>
      <td><img class="logo" src="/images/<%=airline.logo%>"/></td>
    </tr>
  <%end%>
</table>

<form action="/airlines/new">
  <input type="submit" value="Add Airline">
</form>

<a href="/">Home</a>